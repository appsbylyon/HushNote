<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appsbylyon.hushnote"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    <uses-permission 
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission
         
        android:name="android.permission.READ_EXTERNAL_STORAGE"/>"

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.appsbylyon.hushnote.Activities.SplashScreen"
            android:screenOrientation="portrait">"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.appsbylyon.hushnote.Activities.LibraryView"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.appsbylyon.hushnote.Activities.NotebookView"
            android:label="@string/app_name"
            android:parentActivityName="com.appsbylyon.hushnote.Activities.LibraryView">
            
        </activity>
        
        <activity
            android:name="com.appsbylyon.hushnote.Activities.FileChooser"
            android:label="@string/app_name"
            android:parentActivityName="com.appsbylyon.hushnote.Activities.LibraryView">
            
        </activity>
        
        <activity
            android:name="com.appsbylyon.hushnote.Activities.Help"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:parentActivityName="com.appsbylyon.hushnote.Activities.LibraryView">
            
        </activity>
        
        <activity
            android:name="com.appsbylyon.hushnote.Activities.About"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:parentActivityName="com.appsbylyon.hushnote.Activities.LibraryView">
            
        </activity>
        
        <activity
            android:name="com.appsbylyon.hushnote.Activities.AboutFonts"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:parentActivityName="com.appsbylyon.hushnote.Activities.LibraryView">
            
        </activity>
        
    </application>

</manifest>
